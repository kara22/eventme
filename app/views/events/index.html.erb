<div class="container">
  <div class="row">
    <% current_user.events.going.each do |event| %>
      <div class="col-xs-12">
        <div class="card" style="background-image: linear-gradient(to right,rgba(222, 98, 98, 0.4), rgba(255, 184, 140, 0.4)), url('<%= image_path event.cover %>');">
          <div class="card-title"><%= event.name %></div>
          <div class="card-subtitle"><%= DateTime.parse(event.start_time).strftime("%d/%m/%Y")%></div>
          <div class="card-content">
            <ul class="list-inline">
              <li><%= image_tag 'participants.png' %></li>
              <li><%= event.attending_count %></li>
            </ul>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

